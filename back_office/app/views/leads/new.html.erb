<div class='w-full max-w-xs'>
  <div class='py-10'>
    Please enter the lead information below:
  </div>

  <%= form_for @lead, class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4' do |f| %>
    <div class=mb-4'>
      <%= f.label :contact_name, "Contact Name:", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :contact_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class='mb-4'>
      <%= f.label :location, "Location:", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :location, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      <!-- shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline -->
    </div>
    <div class='mb-4'>
      <%= f.label :phone, "Phone:", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :phone, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class='mb-4'>
      <%= f.label :company, "Company:", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :company, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class='mb-4'>
      <%= f.label :role, "Role:", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :role, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <%= f.submit 'Submit', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  <% end %>
</div>
