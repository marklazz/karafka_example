<h1 class='py-8 text-xl font-bold'>
  Leads
</h1>

<div>
  <%= link_to 'New', new_lead_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
</div>

<div class='py-8'>
  <% if @leads.present? %>
    <table class='table-auto border-x border-b w-full'>
      <thead>
        <tr>
          <th class='font-bold p-2 border-b text-left bg-indigo-700 text-white'>
            Contact Name
          </th>
          <th class='font-bold p-2 border-b text-left bg-indigo-700 text-white'>
            Location
          </th>
          <th class='font-bold p-2 border-b text-left bg-indigo-700 text-white'>
            Phone
          </th>
          <th class='font-bold p-2 border-b text-left bg-indigo-700 text-white'>
            Company
          </th>
          <th class='font-bold p-2 border-b text-left bg-indigo-700 text-white'>
            Role
          </th>
          <th class='font-bold p-2 border-b text-left bg-indigo-700 text-white'>
            User
          </th>
        </tr>
      </thead>
      <tbody>
        <% @leads.each do |lead| %>
          <tr class='odd:bg-gray-100'>
            <td>
              <%= lead.contact_name %>
            </td>
            <td>
              <%= lead.location %>
            </td>
            <td>
              <%= lead.phone %>
            </td>
            <td>
              <%= lead.company %>
            </td>
            <td>
              <%= lead.role %>
            </td>
            <td>
              <%= lead.user.full_name %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    Not leads present at this time.
  <% end %>
</div>
